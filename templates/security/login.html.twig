{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<section class="form">
		<div class="container">
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div>
						You are logged in as
						{{ app.user.userIdentifier }},
						<a href="{{ logout_path() }}">Logout</a>
					</div>
				{% endif %}

				<h1>Please sign in</h1>
				<label for="username">Username</label>
				<input type="text" value="{{ last_username }}" name="_username" id="username" autocomplete="username" required autofocus>
				<label for="password">Password</label>
				<input type="password" name="_password" id="password" autocomplete="current-password" required>
				<input
				type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

				{#
				            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
				            See https://symfony.com/doc/current/security/remember_me.html
				
				            <div class="checkbox mb-3">
				                <input type="checkbox" name="_remember_me" id="_remember_me">
				                <label for="_remember_me">Remember me</label>
				            </div>
				        #}

				<button class="btn btn-lg btn-primary" type="submit">
					Sign in
				</button>
                <a href={{path('app_forgot_password')}}>Mot de passe oubli√©</a>
			</form>
		</div>
	</section>

{% endblock %}
